{
    "label": "Veritone User",
    "name": "veritoneuser",
    "apiVersion": "v1",
    "internal": false,
    "configurationType": "PER_USER",
    "deployment": {
        "profiles":[
            {
                "name": "default",
                "label": "Default",
                "memory": 256,
                "description": "Default configuration"
            }
        ],
        "allowMultipleInstances": false
    },
    "status": "ACTIVE",
    "stores": [],
    "events": [
        {
            "label": "Webhook",
            "name": "webhook",
            "description": "Webhook sent from the Veritone platform"
        }
    ],
    "functions": [
        {
            "label": "GET",
            "name": "_get",
            "functionType": "PER_USER",
            "description": "Sends a GET request"
        },
        {
            "label": "POST",
            "name": "_post",
            "functionType": "PER_USER",
            "description": "Sends a POST request"
        },
        {
            "label": "PUT",
            "name": "_put",
            "functionType": "PER_USER",
            "description": "Sends a PUT request"
        },
        {
            "label": "PATCH",
            "name": "_patch",
            "functionType": "PER_USER",
            "description": "Sends a PATCH request"
        },
        {
            "label": "DELETE",
            "name": "_delete",
            "functionType": "PER_USER",
            "description": "Sends a DELETE request"
        },
        {
            "label": "HEAD",
            "name": "_head",
            "functionType": "PER_USER",
            "description": "Sends a HEAD request"
        },
        {
            "label": "OPTIONS",
            "name": "_options",
            "functionType": "PER_USER",
            "description": "Sends a OPTIONS request"
        }
    ],
    "scripts": [
        "functions.js"
    ],
    "flowSteps": [
        "apiCallVeritoneuser"
    ],
    "listeners":[],
    "configuration":[
        {
            "name": "config1",
            "label": "OAuth config",
            "value": "The following fields are needed to access the API as a Veritone User.",
            "type": "info"
        },
        {
            "name": "environment",
            "label": "Environment",
            "description": "Select the environment to target for the AI Data API and AI Data Admin.",
            "type": "buttonsGroup",
            "required": true,
            "defaultValue": "prod",
            "typeOptions": {
                "allowCustom": false,
                "possibleValues":[
                    {
                        "label":"Developer",
                        "name":"dev"
                    },
                    {
                        "label":"Staging",
                        "name":"stage"
                    },
                    {
                        "label":"Production",
                        "name":"prod"
                    }
                ]
            }
        },
        {
            "name": "region",
            "label": "Geographic region",
            "description": "Select the geographic region to be targeted by the AI Data API and AI Data Admin. (Custom allowed i.e. 'us-1')",
            "type": "buttonsGroup",
            "required": true,
            "defaultValue": "no",
            "typeOptions": {
                "allowCustom": true,
                "possibleValues":[
                    {
                        "label":"US-1",
                        "name":"us-1"
                    },
                    {
                        "label":"CA-1",
                        "name":"ca-1"
                    },
                    {
                        "label":"UK-1",
                        "name":"uk-1"
                    },
                    {
                        "label":"UK",
                        "name":"uk"
                    },
                    {
                        "label":"Without region",
                        "name":"no"
                    }
                ]
            }
        },
        {
            "name": "clientId",
            "label": "Client ID",
            "description": "The client ID used for OAuth",
            "type": "text",
            "required": true
        },
        {
            "name": "clientSecret",
            "label": "Client secret",
            "description": "The client secret used for OAuth",
            "type": "text",
            "required": true
        },
        {
            "name": "oauthCallback",
            "label": "OAuth callback",
            "description": "The OAuth callback to configure in your Veritone App",
            "type": "label",
            "value": "config.WEBHOOK_URL+'/authCallback'"
        },
        {
            "name": "webhook",
            "label": "Webhooks URL",
            "type": "label",
            "value": "@config.WEBHOOK_URL"
        }
    ]
}